{
  "name": "cvrum",
  "private": true,
  "version": "0.1.0",
  "description": "CVRUM SaaS monorepo",
  "license": "UNLICENSED",
  "packageManager": "npm@10.8.2",
  "scripts": {
    "dev": "npm-run-all --parallel dev:web dev:api",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "build": "npm-run-all build:web build:api",
    "build:web": "npm --workspace apps/web run build",
    "build:api": "npm --workspace apps/api run build",
    "lint": "npm-run-all lint:web lint:api",
    "lint:web": "npm --workspace apps/web run lint",
    "lint:api": "npm --workspace apps/api run lint",
    "format": "npm-run-all format:web format:api",
    "format:web": "npm --workspace apps/web run format",
    "format:api": "npm --workspace apps/api run format",
    "start": "npm --workspace apps/api run start"
  },
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
